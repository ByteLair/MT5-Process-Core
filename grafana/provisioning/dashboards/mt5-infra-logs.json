{
  "annotations": {"list": []},
  "editable": true,
  "panels": [
    {
      "datasource": {"type": "loki", "uid": "loki"},
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "id": 1,
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "showContext": true,
        "limit": 1000
      },
      "targets": [
        {"expr": "{job=~\"mt5_api|ml|health_checks|postgres|scheduler|syslog\"}", "refId": "A"}
      ],
      "title": "Centralized System Logs",
      "type": "logs"
    },
    {
      "datasource": {"type": "loki", "uid": "loki"},
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 8},
      "id": 2,
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "showContext": true,
        "limit": 100
      },
      "targets": [
        {"expr": "{level=\"ERROR\"}", "refId": "A"}
      ],
      "title": "Critical Errors (All Services)",
      "type": "logs"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 12},
      "id": 3,
      "options": {"colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""}, "textMode": "auto"},
      "targets": [{"expr": "node_memory_Active_bytes / node_memory_MemTotal_bytes * 100", "refId": "A"}],
      "title": "Memory Usage (%)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 12},
      "id": 4,
      "options": {"colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""}, "textMode": "auto"},
      "targets": [{"expr": "rate(node_cpu_seconds_total{mode=\"user\"}[$__rate_interval]) * 100", "refId": "A"}],
      "title": "CPU Usage (%)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 12},
      "id": 5,
      "options": {"colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""}, "textMode": "auto"},
      "targets": [{"expr": "node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"} * 100", "refId": "A"}],
      "title": "Disk Free (%)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 12},
      "id": 6,
      "options": {"colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""}, "textMode": "auto"},
      "targets": [{"expr": "sum(up)", "refId": "A"}],
      "title": "Containers Up",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "id": 7,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "multi", "sort": "none"}},
      "targets": [{"expr": "pgbouncer_queue_length", "refId": "A"}],
      "title": "PgBouncer Queue Length",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
      "id": 8,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "multi", "sort": "none"}},
      "targets": [
        {"expr": "sum(rate(node_network_receive_bytes_total[$__rate_interval])) by (instance)", "refId": "A"},
        {"expr": "sum(rate(node_network_transmit_bytes_total[$__rate_interval])) by (instance)", "refId": "B"}
      ],
      "title": "Network Traffic (Rx/Tx)",
      "type": "timeseries"
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
